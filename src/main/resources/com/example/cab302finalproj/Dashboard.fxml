<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="445.0" style="-fx-background-color: #3D0066;" stylesheets="@../../../style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cab302finalproj.Dashboard">
   <children>
      <Text layoutX="289.0" layoutY="205.0" strokeType="OUTSIDE" strokeWidth="0.0" text="This is dashboard" />
      <Pane layoutX="23.0" layoutY="98.0" prefHeight="277.0" prefWidth="391.0" style="-fx-background-color: var(--primary); -fx-background-radius: 10;">
         <children>
            <TextArea layoutX="17.0" layoutY="19.0" prefHeight="240.0" prefWidth="356.0" style="-fx-background-color: #FDC500;" text="Recent notes:" />
         </children>
      </Pane>
      <HBox fx:id="buttonContainer" layoutX="22.0" layoutY="65.0" spacing="10.0">
         <children>
            <Button fx:id="addMoreButton" mnemonicParsing="false" onAction="#handleAddMore" style="-fx-background-color: #FDC500; -fx-background-radius: 10;" text="Add More">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <TextField layoutX="22.0" layoutY="25.0" promptText="Search" />
      <Pane layoutX="204.0" layoutY="19.0" prefHeight="37.0" prefWidth="200.0" style="-fx-background-color: #FDC500; -fx-background-radius: 5;">
         <children>
            <Text fx:id="selectedLabel" layoutX="10.0" layoutY="24.0" strokeType="OUTSIDE" strokeWidth="0.0" text="SELECTED:">
               <font>
                  <Font size="15.0" />
               </font>
            </Text>
         </children>
      </Pane>
      <Button fx:id="SaveButton" layoutX="315.0" layoutY="368.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="81.0" style="-fx-background-color: #FDC500; -fx-background-radius: 10;" text="Save">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="DeleteButton" layoutX="39.0" layoutY="369.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="81.0"
              style="-fx-background-color: #E03A3C; -fx-background-radius: 10;" text="Delete" textFill="WHITE"
              onAction="#handleDeleteSelected">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button fx:id="GenerateButton" layoutX="223.0" layoutY="368.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="81.0" style="-fx-background-color: #FDC500; -fx-background-radius: 10;" text="Generate">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
